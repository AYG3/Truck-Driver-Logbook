# =============================================================================
# TRUCK DRIVER LOGBOOK - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and adjust values as needed
# All values shown are defaults

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgres://localhost:5432/tdlogbook

# =============================================================================
# CELERY / REDIS
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# HOS CONFIGURATION (FMCSA Defaults)
# These can be tuned for different regulations or testing
# =============================================================================

# Core HOS limits
HOS_MAX_DRIVING_HOURS=11
HOS_MAX_ON_DUTY_WINDOW=14
HOS_MAX_CYCLE_HOURS=70
HOS_CYCLE_DAYS=8
HOS_MINIMUM_REST_HOURS=10

# Break requirements
HOS_BREAK_AFTER_HOURS=8
HOS_BREAK_DURATION_MINUTES=30

# Trip logistics (Assessment assumptions)
HOS_PICKUP_DURATION_HOURS=1
HOS_DROPOFF_DURATION_HOURS=1
HOS_FUEL_INTERVAL_MILES=1000
HOS_FUEL_STOP_DURATION_MINUTES=30

# Driving parameters
HOS_DEFAULT_SPEED_MPH=55
HOS_MAX_CONTINUOUS_DRIVING_HOURS=2
